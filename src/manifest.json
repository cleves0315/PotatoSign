{
  "name": "土豆签",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "土豆签",
  "icons": {
    "16": "icon-16.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "storage"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "options_ui": {
    "page": "options.html"
  },
  "action": {
    "default_title": "土豆签",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "19": "icon-19.png",
      "32": "icon-32.png",
      "128": "icon-128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://web-accessible-resources-1.glitch.me/*"]
    }
  ]
}
